@model Appointment_WEB.Models.AppointmentModel

<style>
    /* Default styles for the form container */
    .container.form-container {
        max-width: 500px;
        margin: 0 auto;
        padding: 20px;
        background-color: #f5f5f5;
        border: 1px solid #dcdcdc;
        border-radius: 5px;
    }

        .container.form-container .form-group {
            margin-bottom: 20px;
        }

        .container.form-container label.control-label {
            font-weight: bold;
        }

        .container.form-container .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
        }

            .container.form-container .btn-primary:hover {
                background-color: #0056b3;
                border-color: #0056b3;
            }

        .container.form-container .text-danger {
            color: #dc3545;
        }
</style>
<div class="container form-container"
    <h2>Add Appointment</h2>
    <form asp-controller="Appointment" asp-action="Add" method="post">
        <div class="form-group">
            <label asp-for="title" class="control-label">Title</label>
            <input asp-for="title" class="form-control" />
            <span asp-validation-for="title" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="description" class="control-label">Description</label>
            <input asp-for="description" class="form-control" />
            <span asp-validation-for="description" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="day" class="control-label">Day</label>
            <select asp-for="day" class="form-control">
                <option value="Monday">Monday</option>
                <option value="Tuesday">Tuesday</option>
                <option value="Wednesday">Wednesday</option>
                <option value="Thursday">Thursday</option>
                <option value="Friday">Friday</option>
                <option value="Saturday">Saturday</option>
                <option value="Sunday">Sunday</option>
            </select>
            <span asp-validation-for="day" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="startTime" class="control-label">Start Time</label>
            <input asp-for="startTime" type="time" class="form-control" step="60" />
            <span asp-validation-for="startTime" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="endTime" class="control-label">End Time</label>
            <input asp-for="endTime" type="time" class="form-control" step="60" />
            <span asp-validation-for="endTime" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Add Appointment</button>
    </form>
</div>