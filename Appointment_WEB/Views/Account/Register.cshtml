@model Appointment_WEB.Models.Register

<style>
    .register {
        width: 300px;
        margin: 0 auto;
        padding: 20px;
        border: 1px solid #ccc;
        border-radius: 5px;
        background-color: #f5f5f5;
    }

        .register h2 {
            text-align: center;
            margin-bottom: 20px;
            color: #333;
        }

        .register span {
            display: block;
            margin: 10px 0;
            font-weight: bold;
            color: #555;
        }

        .register input[type="text"],
        .register input[type="password"] {
            width: 100%;
            padding: 10px;
            margin: 5px 0;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        .register button {
            width: 100%;
            padding: 10px;
            background-color: #007bff;
            color: #fff;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

            .register button:hover {
                background-color: #0056b3;
            }

    .alert-danger {
        background-color: #f8d7da;
        border: 1px solid #f5c6cb;
        color: #721c24;
        padding: 10px;
        border-radius: 5px;
        margin-top: 10px;
    }

        .alert-danger ul {
            list-style: none;
            margin: 0;
            padding: 0;
        }

        .alert-danger li {
            margin-bottom: 5px;
        }
</style>



@using (Html.BeginForm("Register", "Account", FormMethod.Post))
{

    <div class="register">
        <h2>Register</h2>

        @Html.LabelFor(x => x.Name, "Login:")
        @Html.TextBoxFor(x => x.Name)

        @Html.LabelFor(x => x.Email, "Email:")
        @Html.TextBoxFor(x => x.Email)

        @Html.LabelFor(x => x.Phone, "Phone:")
        @Html.TextBoxFor(x => x.Phone)

        @Html.LabelFor(x => x.Password, "Password:")
        @Html.PasswordFor(x => x.Password)

        <button type="submit">Register</button>
    </div>
}

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger mt-3">
        @Html.ValidationSummary()
    </div>
}