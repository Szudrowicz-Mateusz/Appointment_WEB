@model Appointment_WEB.Models.BufferedSingleFileUploadDb

<form asp-action="UploadFile" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="FormFile"></label>
        <input asp-for="FormFile" type="file" class="form-control" />
        <span asp-validation-for="FormFile" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Upload File</button>
</form>
