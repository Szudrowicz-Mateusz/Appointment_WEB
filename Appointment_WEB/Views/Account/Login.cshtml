@model Appointment_WEB.Models.Login

<style>
.login {
    width: 300px;
    margin: 0 auto;
    padding: 20px;
    border: 1px solid #ccc;
    border-radius: 5px;
    background-color: #f5f5f5;
}

.login h2 {
    text-align: center;
    margin-bottom: 20px;
    color: #333;
}

.login label {
    display: block;
    margin: 10px 0;
    font-weight: bold;
    color: #555;
}

.login input[type="text"],
.login input[type="password"] {
    width: 100%;
    padding: 10px;
    margin: 5px 0;
    border: 1px solid #ccc;
    border-radius: 5px;
}

.login button {
    width: 100%;
    padding: 10px;
    background-color: #007bff;
    color: #fff;
    border: none;
    border-radius: 5px;
    cursor: pointer;
}

.login button:hover {
    background-color: #0056b3;
}
</style>


@using (Html.BeginForm("Login", "Account", FormMethod.Post))
{
    @Html.ValidationSummary();

    <div class="login">
        <h2>Login</h2>

        @Html.LabelFor(x => x.Name, "Login:")
        @Html.TextBoxFor(x => x.Name)

        @Html.LabelFor(x => x.Password, "Password:")
        @Html.PasswordFor(x => x.Password)

        <button type="submit">Login</button>
    </div>
}